// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db { 
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Restaurant {
  id               String   @id @default(uuid())
  logo             String
  description      String?
  ownerId          String
  name             String
  address          String
  city             String?
  country          String?
  zipCode          String?
  phone            String
  email            String
  website          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime? @updatedAt
  menus            Menu[]
  admins           Admin[]
  orders           Order[]
}

model Menu {
  id            String     @id @default(uuid())
  restaurantId  String
  name          String
  description   String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime?  @updatedAt
  image         String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
  menuItems     MenuItem[]
}

model MenuItem {
  id           String   @id @default(uuid())
  restaurantId String
  menuId       String
  name         String
  description  String
  price        Json
  image        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime? @updatedAt
  menu         Menu     @relation(fields: [menuId], references: [id])
}

model Admin {
  id           String     @id @default(uuid())
  userId       String
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Order {
  id            String     @id @default(uuid())
  userId        String
  restaurantId  String
  menuItems     String[]
  totalAmount   Int
  status        String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime?  @updatedAt
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
}
